@model TodoGDS.TodoItem

@{
    ViewData["Title"] = "Todo Details";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Todo Details</h1>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">@Html.DisplayNameFor(model => model.Id)</dt>
                <dd class="govuk-summary-list__value">@Html.DisplayFor(model => model.Id)</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="govuk-summary-list__value">@Html.DisplayFor(model => model.Description)</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">@Html.DisplayNameFor(model => model.IsCompleted)</dt>
                <dd class="govuk-summary-list__value">
                    @if (Model.IsCompleted)
                    {
                        <strong class="govuk-tag govuk-tag--green">Completed</strong>
                    }
                    else
                    {
                        <strong class="govuk-tag govuk-tag--yellow">Pending</strong>
                    }
                </dd>
            </div>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="govuk-button">Edit</a>
    <a asp-action="Index" class="govuk-link">Back to List</a>
</div>
