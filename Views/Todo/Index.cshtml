@model IEnumerable<TodoGDS.TodoItem>

@{
    ViewData["Title"] = "Todo List";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Todo List</h1>
        <p>
            <a asp-action="Create" class="govuk-button">Create New</a>
        </p>
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header">@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="govuk-table__header">@Html.DisplayNameFor(model => model.IsCompleted)</th>
                    <th class="govuk-table__header">Actions</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                @foreach (var item in Model)
                {
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="govuk-table__cell">
                            @if (item.IsCompleted)
                            {
                                <strong class="govuk-tag govuk-tag--green">Completed</strong>
                            }
                            else
                            {
                                <strong class="govuk-tag govuk-tag--yellow">Pending</strong>
                            }
                        </td>
                        <td class="govuk-table__cell">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="govuk-link">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="govuk-link">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="govuk-link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
